@model Cinephile.Web.ViewModels.TVShows.TVShowViewModel
@{
    ViewData["Title"] = "TVShowView";
}

<body>
    <div class="container">
        <div class="row align-items-center my-5">
            <div class="col-lg-5">
                <img class="img-fluid rounded mb-4 mb-lg-0" src="@Model.ImageUrl" alt="">
            </div>
            <div class="col-lg-7">
                <h1 class="font-weight-light">@Model.Title (@Model.Year)</h1>
                <h4>Overview</h4>
                <p>@Model.Description</p>
                <h4>Seasons - @Model.Seasons</h4>
            </div>
        </div>
        <div class="card text-white bg-active my-5 py-4 text-center">
            <div class="card-body">
                <button onclick="location.href='@Model.HomePageLink'" class="btn btn-secondary">HomePage</button>
                <button onclick="location.href='@Model.IMDBLink'" class="btn btn-primary">IMDb</button>
                <button onclick="location.href='@Model.TrailerLink'" class="btn btn-warning">YouTube</button>
                <button onclick="location.href='@Model.FacebookLink'" class="btn btn-info">Facebook</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-5">
                <div class="card h-100">
                    <div class="card-body">
                        <h2 class="card-title">Creators</h2>
                        <ul>
                            <li>@Model.Creater</li>
                        </ul>
                        <h2 class="card-title">Producers</h2>
                        <ul>
                            <li>@Model.Producer</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-5">
                <div class="card h-100">
                    <div class="card-body">
                        <h2 class="card-title">Actors</h2>
                        <ul>
                            <li>Bob Odenkirk</li>
                            <li>Jonathan Banks</li>
                            <li>Patrick Fabian</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-5">
                <div class="card h-100">
                    <div class="card-body">
                        <h3 class="card-title">Genre</h3>
                        <ul>
                            <li>Crime Drama</li>
                            <li>BlackComedy</li>
                        </ul>
                        <h3 class="card-title">Release</h3>
                        <ul>
                            <li>@Model.ReleaseDate</li>
                        </ul>
                        <h3 class="card-title">Country</h3>
                        <ul>
                            <li>@Model.Country</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2019</p>
            <a class="btn btn-success " a href="/Administration/TVShows/Edit/@Model.Id" style="text-decoration:none;">Edit</a>
            <a class="btn btn-warning" a href="/Administration/TVShows/Delete/@Model.Id" style="text-decoration:none">Delete</a>
        </div>
    </footer>
</body>

