@using Cinephile.Common
@model Cinephile.Web.ViewModels.Posts.AllPostsViewModel
@{
    this.ViewData["Title"] = "Forum";
}

<div class="table-dark">
    <hr />
    <h1 class="display-3 text-center">Welcome to Cinephile Forum!</h1>
    <hr />
</div>

<hr />

<ol class="breadcrumb bg-light">
    <li class="breadcrumb-item active">Recent Posts</li>
</ol>

<table class="table table-primary">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">User</th>
            <th scope="col">Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.Posts.OrderByDescending(x => x.CreatedOn).Take(10))
        {
            <tr class="table-dark">
                <td><a href="Posts/ById/@post.Id"><font color="#ffffff">@post.Title</font></a></td>
                <td><a href="Categories/CategoryByName/?categoryName=@post.Category.Name" class="btn btn-outline-primary">@post.Category.Name</a></td>
                <td><a href="/Users/UserPosts/?username=@post.UserUserName"><font color="#ffffff">@post.UserUserName</font></a></td>
                <td>@post.FormattedDate</td>
            </tr>
        }
    </tbody>
</table>

