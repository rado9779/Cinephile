@model Cinephile.Web.ViewModels.Posts.PostEditViewModel
@{
    ViewData["Title"] = "Edit Post";
    var categories = Model.Categories.Select(x => new SelectListItem(x.Name, x.Id.ToString()));
}

<form method="post" asp-area="Forum" asp-controller="Posts" asp-action="Edit">
    <hr />
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control bg-white" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="categories" class="form-control bg-white"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <hr />
    <button type="submit" class="btn btn-primary">Edit</button>
    <a class="btn btn-success" href="/Forum/Posts/ById/@Model.Id">Back</a>
</form>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>



