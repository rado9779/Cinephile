@model Cinephile.Web.ViewModels.Movies.AllMoviesViewModel
@{
    ViewData["Title"] = "MoviesIndex";
}
<hr />
<h1>Movies</h1>
<hr />
<div class="container-fluid">
    <div class="row content">
        <div class="col-3 sidenav">
            <form>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Movie Title</label>
                    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Title">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Genre</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
                <button type="button" class="btn btn-info">Search</button>
            </form>
        </div>

        <div class="col-md-40 media-body">
            <div class="row">
                @foreach (var movie in Model.Movies)
                {
                    <div class="col-md-4 media">
                        <div class="media-body">
                            <div class="card bg-info">
                                <img class="card-img-top" src="@movie.ImageUrl" alt="Card image cap" height="200" width="200">
                                <div class="card-body">
                                    <p style="color:black;">@movie.Title</p>
                                </div>
                            </div>
                            <p></p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>